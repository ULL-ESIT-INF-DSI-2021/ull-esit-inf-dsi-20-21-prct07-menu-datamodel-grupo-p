{
  "exclude": [
    "./tests",
    "./node_modules",
    "./dist"
  ],
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "noImplicitAny": false, //No se permite la inferencia del tipo any por parte del compilador de Typescript
    "strictNullChecks": true, //No podemos asignar NULL y UNDEFINED a todos los tipos de Typescript
    "strictPropertyInitialization": true, //Hay que tener inicializadas todas las propiedades definidas de una clase
    "noImplicitReturns": false //Obliga a que todas las funciones contengan alg√∫n tipo de retorno
  }
}